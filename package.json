{
  "name": "medmcq",
  "version": "0.3.0",
  "description": "En webapp til visning af MCQ-opgaver fra kandidaten i medicin p√• AU",
  "main": "server/server.js",
  "engines": {
    "node": "10.16.0",
    "npm": "6.9.0"
  },
  "repository": "https://github.com/Morsby/medmcq",
  "scripts": {
    "start": "node server/build/server.js",
    "server": "cd server && npm run dev",
    "client": "npm run genversion && cd client && npm start",
    "dev": "npm-run-all --parallel server client",
    "installProd": "npm-run-all --sequential installProd:*",
    "installProd:server": "cd server && npm ci --only=production",
    "installProd:client": "cd client && npm ci --only=production",
    "build": "npm run genversion && npm-run-all --sequential build:*",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "genversion": "genversion -e version.js && mv version.js client/src/",
    "lint": "eslint . --fix --ext .ts,.tsx,.js,.jsx,.json",
    "format": "npm-run-all --parallel format:*",
    "format:json": "prettier --list-different  --write \"**/*.json\"",
    "format:styles": "prettier --list-different --write \"**/*.{css,scss}\"",
    "validate": "npm-run-all --sequential lint format test",
    "test": "npm-run-all --parallel test:*",
    "test:server": "cd server && npm run test",
    "test:client": "cd client && npm run test",
    "install-all": "npm install && cd server && npm install && cd .. && cd client && npm install"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run validate"
    }
  },
  "author": "Morsby",
  "license": "MIT",
  "dependencies": {
    "genversion": "^2.1.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/cookie-session": "^2.0.37",
    "@types/jest": "^24.0.15",
    "@types/lodash": "^4.14.136",
    "@types/react": "^16.8.23",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "babel-eslint": "10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-json": "^1.4.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^3.0.0",
    "prettier": "^1.18.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "typescript-eslint-parser": "^22.0.0"
  }
}
