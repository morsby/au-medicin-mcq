{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {
    "max-line-length": {
      "options": [100]
    }
  },
  "rules": {
    "linebreak-style": [true, "LF"],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "rulesDirectory": []
}
